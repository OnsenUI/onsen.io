"      </div>\n"
"    </label>\n"
"    <label class=\"switch\">\n"
"      <input type=\"checkbox\" class=\"switch__input\" disabled>\n"
"      <div class=\"switch__toggle\">\n"
"        <div class=\"switch__handle\"></div>\n"
"      </div>\n"
"    </label>\n"
"*/"
msgstr ""
"/*~\n"
"  name: Switch\n"
"  category: Switch\n"
